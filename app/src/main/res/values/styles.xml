<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@android:color/white</item>
        <item name="boxStrokeColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <!-- Add any other attributes you want to customize for the TextInputLayout -->
    </style>

    <style name="BottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <!-- Set the color for the icons -->
        <item name="itemIconTint">#C8C4C4</item>

        <!-- Set the color for the text -->
        <item name="itemTextColor">@color/white</item>
    </style>

    <style name="WhiteHintText" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- Expanded Title Style -->
    <style name="ExpandedTitleTextStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Collapsed Title Style -->
    <style name="CollapsedTitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="ExpandedTitleTextAppearance" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/calistoga</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CollapsedTitleTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/calistoga</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ExpandedAppBar" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/arsenal</item>
    </style>

    <style name="CollapsedAppBar" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/arsenal</item>
    </style>

    <style name="CustomSeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:thumb">@drawable/custom_thumb</item>
        <item name="android:progressDrawable">@drawable/custom_progress</item>
    </style>


    <!-- SearchView Custom Style for Dark Theme -->
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Text color when typing -->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">#808080</item>

        <!-- Search icon and close icon colors -->
        <item name="searchIcon">@drawable/ic_search</item>
        <item name="closeIcon">@drawable/ic_close</item>

        <!-- Query background -->
        <item name="queryBackground">@android:color/transparent</item>
        <item name="submitBackground">@android:color/transparent</item>

        <!-- Cursor color -->
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <!-- res/values/styles.xml -->
    <style name="Shape.Lg.Radius12" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="Shape.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>



</resources>