<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardBackgroundColor="#1A1A1A"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:strokeColor="#2A2A2A"
    app:strokeWidth="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_card_bg"
        android:padding="12dp">

        <!-- Document Icon with Background -->

        <LinearLayout
            android:id="@+id/imageIcon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/deleteContainer"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:padding="5dp"
                android:src="@drawable/open_folder" />

            <!-- Text Content RelativeLayout -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:layout_toEndOf="@id/icon"
                android:padding="5dp">

                <TextView
                    android:id="@+id/imageName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="My Image File.jpg"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </RelativeLayout>
        </LinearLayout>
        <!-- Delete Button RelativeLayout -->
        <RelativeLayout
            android:id="@+id/deleteContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

            <ImageButton
                android:id="@+id/deleteIcon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/gradient_button_bg"
                android:contentDescription="Delete"
                android:src="@drawable/delete"
                app:rippleColor="#30FF5252"
                app:tint="#FFFFFF" />

        </RelativeLayout>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>