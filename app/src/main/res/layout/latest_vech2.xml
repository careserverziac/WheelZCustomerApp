<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardBackgroundColor="#1E1E1E"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section with Vehicle Name and Actions -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lv_veh_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="ENDEAVOUR"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/lv_veh_colour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Black • SUV"
                    android:textColor="#9E9E9E"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/edit_icon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="#2196F3"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    app:cornerRadius="20dp"
                    app:icon="@drawable/edit_icon"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="16dp"
                    app:iconTint="@android:color/white" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/delete_icon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:backgroundTint="#F44336"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    app:cornerRadius="20dp"
                    app:icon="@drawable/delete"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="16dp"
                    app:iconTint="@android:color/white" />
            </LinearLayout>
        </RelativeLayout>

        <!-- Vehicle Image -->
        <androidx.cardview.widget.CardView
            android:id="@+id/front_image_card"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#2C2C2C"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/lv_veh_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/lambhorginiwheel" />

            <!-- Price Overlay -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_margin="12dp"
                android:background="@drawable/price_tag_bg"
                android:padding="8dp">

                <TextView
                    android:id="@+id/lv_veh_sellingprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹25,50,000"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Vehicle Details Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lv_veh_ownership"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ownership_icon"
                    android:drawablePadding="6dp"
                    android:gravity="center"
                    android:text="Single Owner"
                    android:textColor="#E0E0E0"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/lv_veh_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:drawableStart="@drawable/car_icon"
                    android:drawablePadding="6dp"
                    android:gravity="center"
                    android:text="SUV"
                    android:textColor="#E0E0E0"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lv_veh_fuel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/fuel_icon"
                    android:drawablePadding="6dp"
                    android:gravity="center"
                    android:text="Petrol"
                    android:textColor="#E0E0E0"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/lv_veh_transmission"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:drawableStart="@drawable/transmission_icon"
                    android:drawablePadding="6dp"
                    android:gravity="center"
                    android:text="Automatic"
                    android:textColor="#E0E0E0"
                    android:textSize="11sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Variant and Date Footer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lv_veh_varient"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/variant_chip_bg"
                android:gravity="center"
                android:padding="6dp"
                android:text="Sport Variant"
                android:textColor="#FF6B35"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lv_veh_dateTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="6dp"
                android:layout_weight="0.8"
                android:fontFamily="@font/arsenal"
                android:gravity="center"
                android:text="11-Apr-2023"
                android:textColor="#808080"
                android:textSize="10sp"
                android:textStyle="italic" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

    <!-- Required drawable resources for Design 1:
    1. circle_button_bg.xml - Circular background for buttons
    2. price_tag_bg.xml - Semi-transparent background for price
    3. variant_chip_bg.xml - Rounded border background for variant
    4. Various icons: ownership_icon, car_icon, fuel_icon, transmission_icon
    -->