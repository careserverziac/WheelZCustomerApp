<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardBackgroundColor="#1E1E1E"
    app:cardCornerRadius="20dp"
    app:cardElevation="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/lv_veh_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/lambhorginiwheel" />

                <!-- Gradient overlay -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/gradient_overlay" />
            </androidx.cardview.widget.CardView>

            <!-- Floating Action Buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/edit_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:contentDescription="Edit"
                    app:backgroundTint="#FF6B35"
                    app:fabSize="mini"
                    app:srcCompat="@drawable/edit_icon"
                    app:tint="#FFFFFF" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/delete_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Delete"
                    app:backgroundTint="#FF4757"
                    app:fabSize="mini"
                    app:srcCompat="@drawable/delete"
                    app:tint="#FFFFFF" />
            </LinearLayout>

            <!-- Vehicle Name and Color on Image -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:paddingStart="24dp"
                android:paddingEnd="24dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lv_veh_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ENDEAVOUR"
                        android:textColor="#FF6B35"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:shadowColor="#000000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="4" />

                    <TextView
                        android:id="@+id/lv_veh_colour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Black"
                        android:textColor="#FF6B35"
                        android:textSize="12sp"
                        android:shadowColor="#000000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2" />
                </LinearLayout>

                <TextView
                    android:id="@+id/lv_veh_sellingprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@drawable/price_bubble_bg"
                    android:padding="8dp"
                    android:text="â‚¹25,50,000"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </FrameLayout>

        <!-- Details Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Specs Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/spec_card_bg"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginBottom="4dp"
                        android:src="@drawable/ownership_icon"
                        app:tint="#FF6B35" />

                    <TextView
                        android:id="@+id/lv_veh_ownership"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Single Owner"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/spec_card_bg"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginBottom="4dp"
                        android:src="@drawable/fuel_icon"
                        app:tint="#FF6B35" />

                    <TextView
                        android:id="@+id/lv_veh_fuel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Petrol"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/spec_card_bg"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginBottom="4dp"
                        android:src="@drawable/car_icon"
                        app:tint="#FF6B35" />

                    <TextView
                        android:id="@+id/lv_veh_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SUV"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Specs Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/spec_card_bg"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginBottom="4dp"
                        android:src="@drawable/transmission_icon"
                        app:tint="#FF6B35" />

                    <TextView
                        android:id="@+id/lv_veh_transmission"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Automatic"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="3"
                    android:background="@drawable/variant_highlight_bg"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VARIANT"
                        android:textColor="#808080"
                        android:textSize="8sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/lv_veh_varient"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sport Edition"
                        android:textColor="#FF6B35"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Date Footer -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#333333" />

            <TextView
                android:id="@+id/lv_veh_dateTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/arsenal"
                android:gravity="center"
                android:text="Listed on 11-Apr-2023"
                android:textColor="#666666"
                android:textSize="11sp"
                android:textStyle="italic" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

    <!-- Required drawable resources for Design 2:
    1. gradient_overlay.xml - Bottom gradient for image
    2. price_bubble_bg.xml - White rounded background for price
    3. spec_card_bg.xml - Dark rounded background for spec cards
    4. variant_highlight_bg.xml - Highlighted background for variant
    5. Various icons: ownership_icon, fuel_icon, car_icon, transmission_icon
    -->