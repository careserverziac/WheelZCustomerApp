<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:collapsedTitleTextAppearance="@style/CollapsedTitleTextAppearance"
            app:contentScrim="#272829"
            app:expandedTitleMarginBottom="28dp"
            app:expandedTitleMarginStart="16dp"
            app:expandedTitleTextAppearance="@style/ExpandedTitleTextAppearance"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <ImageView
                android:id="@+id/header_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                android:src="@drawable/electricscooter"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/scrim_gradient"
                app:layout_collapseMode="parallax" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp">

                    <!-- App Logo and Title (Left) -->
                    <LinearLayout
                        android:id="@+id/logo_container"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/wheelz" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:fontFamily="@font/calistoga"
                            android:text="WheelZ"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Profile Icon (Right) -->
                    <ImageView
                        android:id="@+id/profile_icon"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/person_icon"
                        app:tint="@color/white" />

                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Horizontal Category ScrollView -->

            <!-- Category RecyclerView -->
            <!--  <androidx.recyclerview.widget.RecyclerView
                  android:id="@+id/categoryRecyclerView"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="4dp"
                  android:clipToPadding="false"
                  android:paddingStart="8dp"
                  android:paddingEnd="8dp"
                  android:scrollbars="none" />-->

            <!-- Service Cards Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <!-- Top Row : Book Service + 2 Cards in Column -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <!-- Book Service Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/bookServiceCard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1.5"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="8dp"
                        app:cardMaxElevation="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/gradient_purple"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <!-- Title -->
                            <TextView
                                android:id="@+id/bookServiceTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/calistoga"
                                android:text="Book Service"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <!-- Subtitle -->
                            <TextView
                                android:id="@+id/bookServiceSubtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/arsenal"
                                android:text="Quick &amp; Easy Booking"
                                android:textColor="@color/white"
                                android:textSize="16sp" />

                            <!-- Arrow Button -->
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/circle_white_bg"
                                android:padding="10dp"
                                android:src="@drawable/baseline_small_white_arrow"
                                app:tint="#3D3D3D" />

                            <!-- Car Image at Bottom -->
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="160dp"
                                android:layout_marginTop="10dp"
                                android:padding="5dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/blueelectriccar" />

                            <!-- Bottom Label -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/book_rounded"
                                android:fontFamily="@font/arsenal"
                                android:paddingStart="15dp"
                                android:paddingTop="8dp"
                                android:paddingEnd="15dp"
                                android:paddingBottom="8dp"
                                android:text="No min. order value"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Right Column -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:orientation="vertical">

                        <!-- Service History Card -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/serviceHistoryCard"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginBottom="8dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="8dp"
                            app:cardMaxElevation="10dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/gradient_peach"
                                android:padding="15dp">

                                <TextView
                                    android:id="@+id/serviceHistoryTitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/calistoga"
                                    android:text="Service"
                                    android:textColor="#3D3D3D"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/serviceHistorySubtitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/serviceHistoryTitle"
                                    android:fontFamily="@font/arsenal"
                                    android:text="History"
                                    android:textColor="#5D5D5D"
                                    android:textSize="14sp" />

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_below="@id/serviceHistorySubtitle"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/circle_white_bg"
                                    android:padding="10dp"
                                    android:src="@drawable/baseline_small_white_arrow"
                                    app:tint="#3D3D3D" />

                                <ImageView
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentBottom="true"
                                    android:padding="5dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/tools" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Vehicle Documents Card -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/vehicleDocumentsCard"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="8dp"
                            app:cardMaxElevation="10dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/gradient_blue"
                                android:padding="15dp">

                                <TextView
                                    android:id="@+id/vehicleDocsTitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/calistoga"
                                    android:text="Vehicle"
                                    android:textColor="#2D5F7A"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/vehicleDocsSubtitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/vehicleDocsTitle"
                                    android:fontFamily="@font/arsenal"
                                    android:text="Documents"
                                    android:textColor="#4D7F9A"
                                    android:textSize="14sp" />

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_below="@id/vehicleDocsSubtitle"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/circle_white_bg"
                                    android:padding="10dp"
                                    android:src="@drawable/baseline_small_white_arrow"
                                    app:tint="#2D5F7A" />

                                <ImageView
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentBottom="true"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/folder" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:background="@drawable/servide_rounded"
                                    android:fontFamily="@font/arsenal"
                                    android:paddingStart="12dp"
                                    android:paddingTop="6dp"
                                    android:paddingEnd="12dp"
                                    android:paddingBottom="6dp"
                                    android:text="Quick verify"
                                    android:textColor="@color/white"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>


                </LinearLayout>

                <!-- Middle Row : Pre-Owned Vehicles + Test Drive -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- Pre-Owned Vehicles Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/preOwnedCard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="8dp"
                        app:cardMaxElevation="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:background="@drawable/gradient_green"
                            android:padding="20dp">

                            <!-- Title -->
                            <TextView
                                android:id="@+id/preOwnedTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/calistoga"
                                android:text="Pre-Owned Vehicles"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <!-- Subtitle -->
                            <TextView
                                android:id="@+id/preOwnedSubtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/preOwnedTitle"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/arsenal"
                                android:text="Lowest Prices Ever"
                                android:textColor="@color/white"
                                android:textSize="16sp" />

                            <!-- Arrow -->
                            <ImageView
                                android:id="@+id/imageView3"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_below="@id/preOwnedSubtitle"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/circle_white_bg"
                                android:padding="10dp"
                                android:src="@drawable/baseline_small_white_arrow"
                                app:tint="#3D3D3D" />

                            <!-- Vehicle Image -->
                            <ImageView
                                android:id="@+id/iconPreOwned"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_above="@id/preOwnedLabel"
                                android:layout_alignParentEnd="true"
                                android:layout_marginStart="11dp"
                                android:layout_marginBottom="8dp"
                                android:layout_toEndOf="@+id/imageView3"
                                android:src="@drawable/preowned" />

                            <!-- Bottom Label -->
                            <TextView
                                android:id="@+id/preOwnedLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentBottom="true"
                                android:background="@drawable/preowner_rounded"
                                android:fontFamily="@font/arsenal"
                                android:paddingStart="12dp"
                                android:paddingTop="6dp"
                                android:paddingEnd="12dp"
                                android:paddingBottom="6dp"
                                android:text="Minimum order value applicable"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Test Drive Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/testDriveCard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="8dp"
                        app:cardMaxElevation="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:background="@drawable/gradient_orange"
                            android:padding="20dp">

                            <!-- Title -->
                            <TextView
                                android:id="@+id/testDriveTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/calistoga"
                                android:text="Test Drive"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <!-- Subtitle -->
                            <TextView
                                android:id="@+id/testDriveSubtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/testDriveTitle"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/arsenal"
                                android:text="Experience the Ride"
                                android:textColor="@color/white"
                                android:textSize="16sp" />

                            <!-- Arrow -->
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_below="@id/testDriveSubtitle"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/circle_white_bg"
                                android:padding="10dp"
                                android:src="@drawable/baseline_small_white_arrow"
                                app:tint="#3D3D3D" />

                            <!-- Car Image -->
                            <ImageView
                                android:id="@+id/iconTestDrive"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_above="@id/testDriveLabel"
                                android:layout_alignParentEnd="true"
                                android:layout_marginBottom="8dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/testdrive" />

                            <!-- Bottom Label -->
                            <TextView
                                android:id="@+id/testDriveLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentBottom="true"
                                android:background="@drawable/test_drive_rounded"
                                android:fontFamily="@font/arsenal"
                                android:paddingStart="12dp"
                                android:paddingTop="6dp"
                                android:paddingEnd="12dp"
                                android:paddingBottom="6dp"
                                android:text="Book your slot now"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
