<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/refreshprofile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fitsSystemWindows="true">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="12dp"
            android:paddingEnd="20dp"
            android:paddingBottom="24dp">

            <!-- Section 1: Selected Model with Glassmorphism Card -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:alpha="0.7"
                android:fontFamily="@font/arsenal_bold"
                android:letterSpacing="0.02"
                android:text="1.Model &amp; Manufacturer Name "
                android:textColor="@color/white"
                android:textSize="14sp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="#1A1A1A"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:strokeColor="#2A2A2A"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/manufacturer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arsenal"
                        android:letterSpacing="0.08"
                        android:text="Bounce"
                        android:textAllCaps="true"
                        android:textColor="#888888"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/modelname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/arsenal_bold"
                        android:text="Infinity E1+"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <!-- Vehicle Image Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_marginTop="16dp"
                        app:cardBackgroundColor="#0D0D0D"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/veh_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="12dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/pulsar_image" />
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <!-- Compact Filter Chips -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="#1A1A1A"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeColor="#2A2A2A"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <!-- State Chip -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/statedp"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        app:cardBackgroundColor="#252525"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingStart="16dp"
                            android:paddingEnd="12dp">

                            <TextView
                                android:id="@+id/statetext"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/arsenal"
                                android:text="State"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/baseline_arrow_down_icon"
                                app:tint="#888888" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- City Chip -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/citydp"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="5dp"
                        app:cardBackgroundColor="#252525"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingStart="16dp"
                            android:paddingEnd="12dp">

                            <TextView
                                android:id="@+id/citytext"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/arsenal"
                                android:text="City"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/baseline_arrow_down_icon"
                                app:tint="#888888" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:alpha="0.7"
                android:fontFamily="@font/arsenal_bold"
                android:letterSpacing="0.02"
                android:text="2.Select Dealer"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <!-- Dealer RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/dealerlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clipToPadding="false"
                tools:itemCount="3" />


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="#1A1A1A"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:strokeColor="#2A2A2A"
                app:strokeWidth="1dp">

                <TextView
                    android:id="@+id/displaydata"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arsenal"
                    android:padding="16dp"
                    android:text="No Dealer Found"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Section 3: Contact Details -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:alpha="0.7"
                android:fontFamily="@font/arsenal_bold"
                android:letterSpacing="0.02"
                android:text="3.Your Contact Details"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="#1A1A1A"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:strokeColor="#2A2A2A"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tdname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arsenal"
                        android:hint="Name"
                        android:inputType="textPersonName"
                        android:maxLength="50"
                        android:maxLines="2"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="14sp" />

                    <!-- Mobile Input -->


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tdmobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/arsenal"
                        android:hint="Mobile Number"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="14sp" />

                    <!-- Email Input -->


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tdmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/arsenal"
                        android:hint="Email Address"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="14sp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:alpha="0.7"
                android:fontFamily="@font/arsenal_bold"
                android:letterSpacing="0.02"
                android:text="4.Date / Time"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="#1A1A1A"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:strokeColor="#2A2A2A"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Date and Time Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Date Selector -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/selectdate"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="#252525"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/baseline_calendar"
                                    app:tint="#888888" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/arsenal"
                                        android:text="Date"
                                        android:textColor="#888888"
                                        android:textSize="10sp" />

                                    <TextView
                                        android:id="@+id/selecteddate"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/arsenal"
                                        android:text="22-12-1996"
                                        android:textColor="@color/white"
                                        android:textSize="13sp" />
                                </LinearLayout>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Time Selector -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/selecttime"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="#252525"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/baseline_time"
                                    app:tint="#888888" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/arsenal"
                                        android:text="Time"
                                        android:textColor="#888888"
                                        android:textSize="10sp" />

                                    <TextView
                                        android:id="@+id/selectedtime"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/arsenal"
                                        android:text="12:26 AM"
                                        android:textColor="@color/white"
                                        android:textSize="13sp" />
                                </LinearLayout>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Submit Button with Modern Gradient -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/sub_btn"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/gradient_button_bg"
                android:fontFamily="@font/arsenal_bold"
                android:letterSpacing="0.05"
                android:text="Book Test Drive"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:backgroundTint="@null"
                app:cornerRadius="16dp"
                app:elevation="8dp"
                app:iconGravity="textEnd" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
