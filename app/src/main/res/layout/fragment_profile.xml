                    android:layout_margin="5dp"
                    android:backgroundTint="@color/lightgrey"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp"
                    app:cardMaxElevation="12dp"
                    tools:ignore="MissingConstraints">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <LinearLayout
                            android:id="@+id/terms_conditions"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:contentDescription="@string/terms_conditions_icon"
                                android:src="@drawable/terms_and_conditions"
                                app:tint="@color/white" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/arsenal"
                                android:gravity="center_vertical"
                                android:text="Terms &amp; Conditions"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:contentDescription="@string/arrow_icon"
                                android:src="@drawable/baseline_small_white_arrow"
                                app:tint="@color/white" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/privacy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:contentDescription="@string/privacy_icon"
                                android:src="@drawable/baseline_visibility_off_eyes"
                                app:tint="@color/white" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/arsenal"
                                android:gravity="center_vertical"
                                android:text="Privacy Policy"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:contentDescription="@string/arrow_icon"
                                android:src="@drawable/baseline_small_white_arrow"
                                app:tint="@color/white" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/data_privacy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:contentDescription="@string/data_policy_icon"
                                android:src="@drawable/baseline_policy_24"
                                app:tint="@color/white" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/arsenal"
                                android:gravity="center_vertical"
                                android:text="Data Policy"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:contentDescription="@string/arrow_icon"
                                android:src="@drawable/baseline_small_white_arrow"
                                app:tint="@color/white" />

                        </LinearLayout>
                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/arsenal"
                    android:padding="10dp"
                    android:text="Settings"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

