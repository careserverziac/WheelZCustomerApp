<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0A0A">

    <!-- Modern AppBar with Enhanced Collapsing Effect -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:elevation="0dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">



        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:collapsedTitleTextAppearance="@style/CollapsedAppBar"
            app:contentScrim="@android:color/transparent"
            app:expandedTitleMarginBottom="48dp"
            app:expandedTitleMarginStart="24dp"
            app:expandedTitleTextAppearance="@style/ExpandedAppBar"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
            app:scrimAnimationDuration="400"
            app:scrimVisibleHeightTrigger="100dp"
            app:statusBarScrim="@android:color/transparent"
            app:title="WheelZ"
            app:titleCollapseMode="scale"
            app:titleEnabled="true">

            <!-- Gradient Overlay for Image -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_overlay"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.5" />

            <!-- Header Background Image with Parallax -->
            <ImageView
                android:id="@+id/headerImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                android:src="@drawable/bike3"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7" />

            <!-- Gradient Scrim for Better Text Visibility -->
            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="bottom"
                android:background="@drawable/bottom_gradient"
                app:layout_collapseMode="parallax" />

            <!-- Toolbar with Glass Morphism Effect -->


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:navigationIcon="@drawable/ic_back"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />


        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content with Modern Card Design -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refreshprofile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0A0A0A"
                android:orientation="vertical"
                android:paddingTop="8dp">

                <!-- Filter Section Header -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="@font/arsenal"
                    android:letterSpacing="0.02"
                    android:text="Find Your Dealer"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- Modern Filter Card with Elevated Design -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="20dp"
                    app:cardBackgroundColor="#141414"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="12dp"
                    app:strokeColor="#252525"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <!-- Filter Title -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:fontFamily="@font/arsenal"
                            android:letterSpacing="0.03"
                            android:text="Filter By Location"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <!-- State Selection Card -->
                        <com.google.android.material.card.MaterialCardView

                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_marginBottom="12dp"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardBackgroundColor="#1E1E1E"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="4dp"
                            app:strokeColor="@color/green_txt"
                            app:strokeWidth="1dp">

                            <LinearLayout
                                android:id="@+id/statedp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingStart="20dp"
                                android:paddingEnd="16dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_marginEnd="12dp"
                                    android:src="@drawable/ic_location"
                                    app:tint="@color/green_txt" />

                                <TextView
                                    android:id="@+id/statetext"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/arsenal"
                                    android:text="Select State"
                                    android:textColor="#FFFFFF"
                                    android:textSize="15sp" />

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/baseline_arrow_down_icon"
                                    app:tint="@color/green_txt" />
                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <!-- City Selection Card -->
                        <com.google.android.material.card.MaterialCardView

                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardBackgroundColor="#1E1E1E"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="4dp"
                            app:strokeColor="@color/green_txt"
                            app:strokeWidth="1dp">

                            <LinearLayout
                                android:id="@+id/citydp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingStart="20dp"
                                android:paddingEnd="16dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_marginEnd="12dp"
                                    android:src="@drawable/ic_city"
                                    app:tint="@color/green_txt" />

                                <TextView
                                    android:id="@+id/citytext"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/arsenal"
                                    android:text="Select City"
                                    android:textColor="#FFFFFF"
                                    android:textSize="15sp" />

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/baseline_arrow_down_icon"
                                    app:tint="@color/green_txt" />
                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Modern Search Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/searchdealerslnr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="20dp"
                    app:cardBackgroundColor="#141414"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:strokeColor="#252525"
                    app:strokeWidth="1dp">

                    <androidx.appcompat.widget.SearchView
                        android:id="@+id/searchalldealers"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/roundblackborder"                         android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        app:iconifiedByDefault="false"
                        app:queryHint="Search dealers..."
                        app:searchIcon="@drawable/ic_search" />

                </com.google.android.material.card.MaterialCardView>

                <!-- Results Header with Modern Styling -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="12dp">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="12dp"
                        android:background="@color/green_txt" />

                    <TextView
                        android:id="@+id/dealerCountText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/arsenal"
                        android:letterSpacing="0.02"
                        android:text="Available Dealers"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                   <!-- &lt;!&ndash; Sort Button &ndash;&gt;
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="#1E1E1E"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <ImageView
                            android:id="@+id/sortIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_sort"
                            app:tint="@color/green_txt" />

                    </com.google.android.material.card.MaterialCardView>-->

                </LinearLayout>

                <!-- Modern ProgressBar -->
                <ProgressBar
                    android:id="@+id/progressBardealers"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="40dp"
                    android:indeterminateTint="@color/green_txt"
                    android:visibility="gone" />

                <!-- Dealer RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/dealerlist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:overScrollMode="never"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="20dp"
                    android:scrollbars="none" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!--    &lt;!&ndash; Floating Action Button (Optional) &ndash;&gt;
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/fabFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Apply"
            android:textColor="#FFFFFF"
            app:icon="@drawable/ic_check"
            app:iconTint="#FFFFFF"
            app:backgroundTint="@color/green_txt"
            app:layout_anchor="@id/appBarLayout"
            app:layout_anchorGravity="bottom|end"
            android:visibility="gon"/>-->

</androidx.coordinatorlayout.widget.CoordinatorLayout>
