<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".ContactUSActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:orientation="vertical">



            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/conbackbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:gravity="center"
                android:backgroundTint="#E84D4D"
                android:background="@drawable/baseline_arrow_back_ios_24"
                app:fabSize="mini"
                app:srcCompat="@drawable/baseline_arrow_back_ios_24" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CONTACT US"
                android:gravity="center"
                android:fontFamily="@font/arsenal"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="@color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/border_colour"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:orientation="horizontal">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#E84D4D"
                        android:focusable="true"
                        android:gravity="center"
                        app:fabSize="mini"
                        app:srcCompat="@drawable/person_white_icon"
                        app:tint="@color/white" />


                    <EditText
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:hint="Name"
                        android:fontFamily="@font/arsenal"
                        android:inputType="textCapSentences|textEmailAddress"
                        android:longClickable="true"
                        android:maxLength="25"
                        android:padding="5dp"
                        android:textColor="@color/white"
                        android:textColorHint="#BDB9B9"
                        android:textSize="16sp" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:background="@drawable/border_colour"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <com.google.android.material.floatingactionbutton.FloatingActionButton

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#E84D4D"
                        android:focusable="true"
                        android:gravity="center"
                        app:fabSize="mini"
                        app:srcCompat="@drawable/phone"
                        app:tint="@color/white" />


                    <EditText
                        android:id="@+id/mobile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/arsenal"
                        android:hint="Mobile Number"
                        android:inputType="number"
                        android:longClickable="true"
                        android:maxLength="10"
                        android:padding="5dp"
                        android:textColor="@color/white"
                        android:textColorHint="#BDB9B9"
                        android:textSize="16sp" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:background="@drawable/border_colour"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#E84D4D"
                        android:focusable="true"
                        android:gravity="center"
                        app:fabSize="mini"
                        app:srcCompat="@drawable/baseline_mail_icon"
                        app:tint="@color/white" />

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:hint="Email Address"
                        android:fontFamily="@font/arsenal"
                        android:inputType="textEmailAddress"
                        android:longClickable="true"
                        android:maxLength="35"
                        android:padding="5dp"
                        android:textColor="@color/white"
                        android:textColorHint="#BDB9B9"
                        android:textSize="16sp" />
                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:padding="8dp"
                android:background="@drawable/border_colour">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:src="@drawable/gmail_icon"
                    android:layout_alignParentStart="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="SEND"
                        android:gravity="center"
                        android:fontFamily="@font/arsenal"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/contact_whatsapp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="openWhatsAppChat"
                android:layout_marginTop="15dp"
                android:padding="8dp"
                android:background="@drawable/border_colour">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:src="@drawable/whatsapp"
                    android:layout_alignParentStart="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/arsenal"
                        android:gravity="center"
                        android:text="CONTACT US ON WHATSAPP"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </RelativeLayout>


            <View
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />


            <LinearLayout
                android:id="@+id/maillink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:layout_gravity="right"
                    android:src="@drawable/baseline_email_icon"
                    android:textColor="@color/white"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ziacsupport@ziacsoft.com"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/arsenal"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textColor="@color/white"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:layout_gravity="right"
                    android:src="@drawable/baseline_small_white_arrow"
                    android:textColor="@color/white"/>


            </LinearLayout>


            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:background="#4E4D4D"/>


            <LinearLayout
                android:id="@+id/call"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:layout_gravity="right"
                    android:src="@drawable/baseline_call_icon"
                    android:textColor="@color/white"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9008098101"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/arsenal"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textColor="@color/white"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:layout_gravity="right"
                    android:src="@drawable/baseline_small_white_arrow"
                    android:textColor="@color/white"/>


            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:background="#4E4D4D"/>


            <LinearLayout
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onLocateClicked"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:layout_gravity="right"
                    android:src="@drawable/baseline_location_icon"
                    android:textColor="@color/white"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No. 5, 2nd Cross, CSI compound, Mission Rd, Bengaluru, Karnataka 560027"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/arsenal"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textColor="@color/white"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:layout_gravity="right"
                    android:src="@drawable/baseline_small_white_arrow"
                    android:textColor="@color/white"/>


            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:background="#4E4D4D"/>


            <View
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FOLLOW US ONLINE"
                android:gravity="center"
                android:fontFamily="@font/arsenal"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="@color/white"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">


                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />


                <LinearLayout
                    android:id="@+id/facebookimg"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="42dp"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/facebook5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit"
                        android:textColor="#151414"
                        android:textSize="10dp" />

                </LinearLayout>




                <LinearLayout
                    android:id="@+id/linkedinimg"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:src="@drawable/linkedin"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact"
                        android:textColor="#151414"
                        android:textSize="10dp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/twitterimg"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="41dp"
                        android:src="@drawable/twitter_removebg"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Images"
                        android:textColor="#151414"
                        android:textSize="10dp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/instagramimg"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="39dp"
                        android:src="@drawable/instagram1"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Files"
                        android:textColor="#151414"
                        android:textSize="10dp" />

                </LinearLayout>


                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />



            </LinearLayout>

        </LinearLayout>
    </ScrollView>
        </LinearLayout>