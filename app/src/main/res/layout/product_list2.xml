<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/prd_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cartimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/prd_image"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/surya" />


            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/cartimg"
                android:layout_alignBottom="@id/cartimg">


               <!-- <LinearLayout
                    android:layout_width="32dp"
                    android:layout_height="22dp"
                    android:background="@drawable/btnbg_plainoutline"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/cart_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arsenal"
                        android:text="Add"
                        android:textSize="10sp"
                        android:textColor="#0E6E36" />

                </LinearLayout>-->


            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/prd_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/green_txt"
            android:text="Bread"
            android:textSize="10sp"
            android:textStyle="bold"
            android:paddingTop="4dp" />




    </LinearLayout>



</LinearLayout>
