<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0A0A">

    <!-- Modern AppBar with Enhanced Collapsing Effect -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:elevation="0dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_collapseMode="pin"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="Less Driven Veh"
            app:titleTextColor="@color/red" />


    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content with Modern Card Design -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refreshprofile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"

        >

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0A0A0A"
                android:orientation="vertical"
                android:paddingTop="8dp">


                <!-- Modern Search Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/searchdealerslnr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="20dp"
                    app:cardBackgroundColor="#141414"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:strokeColor="#252525"
                    app:strokeWidth="1dp">

                    <androidx.appcompat.widget.SearchView
                        android:id="@+id/searchless"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/roundblackborder"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        app:iconifiedByDefault="false"
                        app:queryHint="Search ..."
                        app:searchIcon="@drawable/ic_search" />

                </com.google.android.material.card.MaterialCardView>

                <!-- Modern ProgressBar -->
                <ProgressBar
                    android:id="@+id/progress"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="40dp"
                    android:indeterminateTint="@color/green_txt"
                    android:visibility="gone" />

                <!-- Dealer RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/lessDrvRV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:overScrollMode="never"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="20dp"
                    android:scrollbars="none" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>



</androidx.coordinatorlayout.widget.CoordinatorLayout>
