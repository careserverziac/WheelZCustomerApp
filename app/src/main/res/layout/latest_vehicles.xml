<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:padding="3dp"
    android:layout_marginBottom="10dp">


    <LinearLayout
        android:id="@+id/rclinearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_colour"
        android:gravity="center"
        android:padding="8dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical|center_horizontal">

            <TextView
                android:id="@+id/lv_veh_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="ENDEAVOUR"
                android:layout_marginStart="30sp"
                android:textColor="#F40F0F"
                android:textSize="16sp"
                android:textStyle="bold" />


        </LinearLayout>

        <TextView
            android:id="@+id/lv_veh_colour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Black"
            android:drawablePadding="5dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/lv_veh_sellingprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selling price"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="14sp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/front_image_card"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="5dp"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="18dp"
            app:cardElevation="0dp">


        <ImageView
            android:id="@+id/lv_veh_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/lambhorginiwheel" />

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lv_veh_ownership"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Single"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/baseline_square_icon"
                android:textColor="@color/white"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/lv_veh_fuel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Petrol"
                android:layout_marginStart="5dp"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/baseline_square_icon"
                android:textColor="@color/white"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lv_veh_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/baseline_square_icon"
                android:text="SUV"
                android:textColor="@color/white"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/lv_veh_varient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:drawableLeft="@drawable/baseline_square_icon"
                android:drawablePadding="5dp"
                android:text="Variant"
                android:textColor="@color/white"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/lv_veh_transmission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transmission"
                android:layout_marginStart="5dp"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/baseline_square_icon"
                android:textColor="@color/white"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lv_veh_dateTime"
                android:layout_width="match_parent"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arsenal"
                android:text="11-Apr-2023"
                android:textColor="@color/white"
                android:textSize="10dp"
                android:textStyle="italic" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="top|end"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp">

        <!-- First Button -->
        <LinearLayout
            android:id="@+id/edit_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/round_red_bg">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/edit_icon"
                app:tint="#FF5722"  />
        </LinearLayout>

        <!-- Second Button -->
        <LinearLayout
            android:id="@+id/delete"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/round_red_bg">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/delete"
                app:tint="#FF5722"  />
        </LinearLayout>
    </LinearLayout>


</FrameLayout>
