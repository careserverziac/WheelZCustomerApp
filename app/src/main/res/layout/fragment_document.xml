<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <!-- Toolbar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:paddingHorizontal="16dp">

        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:src="@drawable/arrow_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/arsenal"
            android:text="Documents"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <!-- Main Content -->


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:fillViewport="true"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.02"
                    android:text="Vehicle Documents"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="sans-serif"
                    android:text="Manage all your vehicle documents in one place"
                    android:textColor="#B0B0B0"
                    android:textSize="14sp" />

            </LinearLayout>


            <!-- Document Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:orientation="vertical">

                <!-- First Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- Warranty Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/warranty"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="4dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="8dp"
                        app:cardMaxElevation="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_blue2"
                            android:padding="15dp">

                            <TextView
                                android:id="@+id/warrantyTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/calistoga"
                                android:text="Warranty"
                                android:textColor="#3D3D3D"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/warrantySubtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/warrantyTitle"
                                android:fontFamily="@font/arsenal"
                                android:text="Valid until 2025"
                                android:textColor="@color/pure_black"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_below="@id/warrantySubtitle"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/circle_white_bg"
                                android:padding="10dp"
                                android:src="@drawable/baseline_small_white_arrow"
                                app:tint="#3D3D3D" />

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:padding="5dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/warranty" />

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Emission Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/emission"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="4dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="8dp"
                        app:cardMaxElevation="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_green2"
                            android:padding="15dp">

                            <TextView
                                android:id="@+id/emissionTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/calistoga"
                                android:text="Emission"
                                android:textColor="#3D3D3D"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/emissionSubtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/emissionTitle"
                                android:fontFamily="@font/arsenal"
                                android:text="Certificate"
                                android:textColor="@color/pure_black"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_below="@id/emissionSubtitle"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/circle_white_bg"
                                android:padding="10dp"
                                android:src="@drawable/baseline_small_white_arrow"
                                app:tint="#3D3D3D" />

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:padding="5dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/emissions" />

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- Second Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- Insurance Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/insurance"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="4dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="8dp"
                        app:cardMaxElevation="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_orange2"
                            android:padding="15dp">

                            <TextView
                                android:id="@+id/insuranceTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/calistoga"
                                android:text="Insurance"
                                android:textColor="#3D3D3D"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/insuranceSubtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/insuranceTitle"
                                android:fontFamily="@font/arsenal"
                                android:text="Renew in 1 year"
                                android:textColor="@color/pure_black"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_below="@id/insuranceSubtitle"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/circle_white_bg"
                                android:padding="10dp"
                                android:src="@drawable/baseline_small_white_arrow"
                                app:tint="#3D3D3D" />

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:padding="5dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/insurance" />

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Permit Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/permit"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="4dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="8dp"
                        app:cardMaxElevation="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_pink"
                            android:padding="15dp">

                            <TextView
                                android:id="@+id/permitTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/calistoga"
                                android:text="Permit"
                                android:textColor="#3D3D3D"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/permitSubtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/permitTitle"
                                android:fontFamily="@font/arsenal"
                                android:text="Commercial"
                                android:textColor="@color/pure_black"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_below="@id/permitSubtitle"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/circle_white_bg"
                                android:padding="10dp"
                                android:src="@drawable/baseline_small_white_arrow"
                                app:tint="#3D3D3D" />

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:padding="5dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/permit" />

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- RC Book Card (Full Width) -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/rcbook"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:cardMaxElevation="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient_purple"
                        android:padding="15dp">

                        <TextView
                            android:id="@+id/rcbookTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/calistoga"
                            android:text="RC Book"
                            android:textColor="#3D3D3D"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/rcbookSubtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/rcbookTitle"
                            android:fontFamily="@font/arsenal"
                            android:text="Registration Certificate"
                            android:textColor="@color/pure_black"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_below="@id/rcbookSubtitle"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/circle_white_bg"
                            android:padding="10dp"
                            android:src="@drawable/baseline_small_white_arrow"
                            app:tint="#3D3D3D" />

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="80dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:padding="5dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/rcbook" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressbarfiles"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:indeterminateTint="#FFFFFF"
        android:visibility="gone" />

</FrameLayout>
