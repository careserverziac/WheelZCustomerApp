                            android:hint="Enter email id"
                            android:inputType="textEmailAddress"
                            android:longClickable="true"
                            android:maxLength="30"
                            android:padding="5dp"
                            android:textColor="@color/white"
                            android:textColorHint="#BDB9B9"
                            android:textSize="16sp" />

                    </LinearLayout>


